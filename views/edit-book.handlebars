<div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-6">
        <div class="row justify-content-center my-5">
            <div class="col-12 text-center">
                <h1>Edite o livro</h1>
            </div>
            <div class="col-8 col-md-4 mt-3">
                <a href="/books" id="link" class="btn btn-secondary w-100">Voltar</a>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-10 col-md-6">
        <form action="/books/update-book" method="POST" class="form">
            <input type="hidden" name="id" value="{{book.id}}">
            <div class="my-4">
                <label for="title">Título:</label>
                <input type="text" class="form-control shadow" name="title" placeholder="Digite o título" value="{{book.title}}">
            </div>
            <div class="my-4">
                <label for="pageqty">Número de páginas:</label>
                <input type="number" class="form-control shadow" name="pageqty" placeholder="Quantas páginas tem o livro?" value="{{book.pageqty}}">
            </div>
            <div class="row justify-content-center">
                <div class="col-8 col-md-4 my-5">
                    <input type="submit" class="form-control btn btn-primary shadow w-100" value="Salvar" class="btn">
                </div>
            </div>
        </form>
    </div>
</div>